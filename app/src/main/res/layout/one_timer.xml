<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardBack"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/typeName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"

                    android:text="Type Name"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:background="@color/nameBack"
                    android:textColor="@color/nameFore"/>
                <SeekBar
                    android:id="@+id/speed"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:splitTrack="false"
                    android:thumb="@drawable/seek_bar_thumb"
                    android:max="15"
                    android:min="7" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/up_down"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:src="@mipmap/i_up_true" />
                    <TextView
                        android:id="@+id/nowCount"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5sp"
                        android:padding="5dp"
                        android:background="@color/countBack"
                        android:text="10"
                        android:gravity="center_horizontal"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/countFore"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/keep"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:src="@mipmap/i_keep_none" />
                    <TextView
                        android:id="@+id/keepCount"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5sp"
                        android:padding="5dp"
                        android:background="@color/countBack"
                        android:text="5"
                        android:gravity="center_horizontal"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/countFore"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ready"
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:src="@mipmap/i_ready_true" />
                    <ImageView
                        android:id="@+id/start"
                        android:layout_weight="10"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="40dp"
                        android:layout_margin="4dp"
                        android:src="@mipmap/i_start_true" />
                    <ImageView
                        android:id="@+id/go"
                        android:layout_weight="20"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_margin="4dp"
                        android:src="@mipmap/i_go_green" />
                </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

