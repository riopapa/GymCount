<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/cardBack"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/typeName"
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="Type Name"
                    android:textSize="20dp"
                    android:layout_margin="2dp"
                    android:background="@color/nameBack"
                    android:textColor="@color/nameFore"/>
                <ImageView
                    android:id="@+id/delete"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/i_delete" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:text="속도"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
                <TextView
                    android:id="@+id/speed"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="36sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:background="@drawable/back_border"
                    android:text="10회"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:text="횟수"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
                <TextView
                    android:id="@+id/mainCount"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="36sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:background="@drawable/back_border"
                    android:text="10회"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/step"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/i_step_false" />

                <TextView
                    android:id="@+id/stepCount"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="36sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:background="@drawable/back_border"
                    android:text="10회"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/hold"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/i_hold_false" />

                <TextView
                    android:id="@+id/holdCount"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="36sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:background="@drawable/back_border"
                    android:text="10회"
                    android:gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="@color/countFore"/>
            </LinearLayout>

            <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/up_down"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="32dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/i_up_true" />

                <ImageView
                    android:id="@+id/ready"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_margin="4dp"
                    android:src="@mipmap/i_ready_true" />
                <ImageView
                    android:id="@+id/start"
                    android:layout_weight="10"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:src="@mipmap/i_start_true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/go"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/i_go_green" />

                <ImageView
                    android:id="@+id/run"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="80dp"
                    android:src="@drawable/running_gifmaker" />

                <ImageView
                    android:id="@+id/stop"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="80dp"
                    android:src="@mipmap/i_stop" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

