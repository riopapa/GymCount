<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="run">

    <TextView
        android:id="@+id/typeName"
        android:layout_width="match_parent"
        android:layout_height="48sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="@string/type_name"
        android:textSize="24sp"
        android:layout_margin="4dp"
        android:background="@color/nameBack"
        android:textColor="@color/nameFore"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/speedTxt"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="@string/speed"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore"/>
        <TextView
            android:id="@+id/speedTxtH"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@color/help"
            android:text="@string/help"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore"/>
        <TextView
            android:id="@+id/speed"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@color/nameBack"
            android:text="10회/분"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore" />

        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:text="@string/count"
            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/up_down"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@color/nameBack"
            android:text="@string/count_down"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore" />

        <TextView
            android:id="@+id/mainCount"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="0dp"
            android:background="@color/nameBack"
            android:text="10회"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/step"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/item_height"
            android:layout_margin="2dp"
            android:src="@mipmap/icon_step_on" />
        <TextView
            android:id="@+id/stepCount"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="0dp"
            android:background="@color/nameBack"
            android:text="10"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/hold"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/item_height"
            android:layout_margin="2dp"
            android:src="@mipmap/icon_hold_on" />

        <TextView
            android:id="@+id/holdCount"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:padding="0dp"
            android:background="@drawable/back_border"
            android:text="10"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:textColor="@color/countFore"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/readyStop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:id="@+id/readyStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/ready"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_margin="0dp"
                android:src="@mipmap/icon_ready_on" />
            <ImageView
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_margin="0dp"
                android:src="@mipmap/icon_start_on" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shoutStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/shout"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/i_go_shout"
                android:layout_width="match_parent" />

            <ImageView
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@mipmap/i_stop" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/runAdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adv_id">
    </com.google.android.gms.ads.AdView>

</LinearLayout>

